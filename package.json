{
  "name": "shield-firewall",
  "version": "1.0.1",
  "type": "module",
  "description": "AI-Powered Client-Side Web Application Firewall - Zero-Knowledge, Predictive Security Protection",
  "main": "dist/shield-firewall.min.js",
  "module": "dist/shield-firewall.esm.min.js",
  "browser": "dist/shield-firewall.min.js",
  "files": [
    "dist/",
    "src/",
    "README.md",
    "API.md",
    "EXAMPLES.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:rollup": "rollup -c --bundleConfigAsCjs",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ test/",
    "lint:fix": "eslint src/ test/ --fix",
    "minify": "terser dist/shield-firewall.js -o dist/shield-firewall.min.js",
    "docs:dev": "cd docs && npm run docs:dev",
    "docs:build": "cd docs && npm run docs:build",
    "docs:preview": "cd docs && npm run docs:preview",
    "clean": "rm -rf dist/",
    "prebuild": "npm run clean",
    "dev": "rollup -c -w",
        "release": "npm run prebuild && npm run build && npm run docs:build",
    "dist": "node dist.js",
    "prepublishOnly": "npm run build",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "firewall",
    "security",
    "client-side",
    "ai",
    "web-application-firewall",
    "xss",
    "injection",
    "threat-detection",
    "cybersecurity",
    "waf",
    "browser-security",
    "dom-protection",
    "network-security",
    "behavior-analysis",
    "predictive-security"
  ],
  "author": "SHIELD.js Team <team@shieldjs.dev>",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^30.2.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jsdoc": "^4.0.0",
    "rollup": "^3.0.0",
    "terser": "^5.0.0",
    "vitepress": "^1.6.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/CorDevelopers/Shield-Firewall"
  },
  "bugs": {
    "url": "https://github.com/CorDevelopers/Shield-Firewall/issues"
  },
  "homepage": "https://github.com/CorDevelopers/Shield-Firewall#readme",
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/shield-js"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=7.0.0"
  },
  "browserslist": [
    "Chrome >= 80",
    "Firefox >= 75",
    "Safari >= 13",
    "Edge >= 80"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.js"
    ],
    "testTimeout": 10000,
    "verbose": true,
    "bail": false,
    "maxWorkers": 4
  },
  "dependencies": {
    "jest-environment-jsdom": "^30.2.0"
  }
}
