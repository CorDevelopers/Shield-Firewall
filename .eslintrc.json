{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": "warn",
    "no-console": "off",
    "no-debugger": "off",
    "no-undef": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single"],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "max-len": ["warn", { "code": 100 }],
    "complexity": ["warn", 10],
    "no-var": "error",
    "prefer-const": "error",
    "prefer-arrow-callback": "error"
  },
  "ignorePatterns": [
    "dist/",
    "node_modules/",
    "docs/",
    "*.min.js",
    "*.map"
  ]
}